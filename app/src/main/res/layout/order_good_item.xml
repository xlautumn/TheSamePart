<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <com.zhihu.matisse.internal.ui.widget.RoundedRectangleImageView
        android:id="@+id/goodAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icn_head_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="[特价]精品进口香蕉/1根"
        android:textSize="15dp"
        app:layout_constraintEnd_toStartOf="@+id/goodPrice"
        app:layout_constraintStart_toEndOf="@+id/goodAvatar"
        app:layout_constraintTop_toTopOf="@+id/goodAvatar" />

    <TextView
        android:id="@+id/goodNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="x1"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/goodAvatar"
        app:layout_constraintStart_toEndOf="@+id/goodAvatar" />

    <TextView
        android:id="@+id/goodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="￥0.99"
        android:textColor="@color/color_000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/goodName"
        app:layout_constraintTop_toTopOf="@+id/goodAvatar" />


</androidx.constraintlayout.widget.ConstraintLayout>