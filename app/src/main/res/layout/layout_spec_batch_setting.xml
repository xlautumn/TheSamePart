<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/dip_30"
    android:paddingEnd="@dimen/dip_30">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dip_20"
        android:text="批量设置"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dip_13"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <TextView
        android:id="@+id/tv_price_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="价格"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dip_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="@dimen/dip_0"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="end"
        android:hint="请输入价格"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/dip_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_price_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_price_title"
        app:layout_constraintTop_toTopOf="@+id/tv_price_title" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_title" />

    <TextView
        android:id="@+id/tv_quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="库存"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/dip_12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <EditText
        android:id="@+id/et_quantity"
        android:layout_width="@dimen/dip_0"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="end"
        android:hint="请输入库存"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textColorHint="@color/color_999999"
        android:textSize="@dimen/dip_12"
        app:layout_constraintBottom_toBottomOf="@+id/tv_quantity_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_quantity_title"
        app:layout_constraintTop_toTopOf="@+id/tv_quantity_title" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_CCCCCC"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity_title" />


</androidx.constraintlayout.widget.ConstraintLayout>