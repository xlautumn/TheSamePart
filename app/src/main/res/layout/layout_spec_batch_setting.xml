<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_FFFFFF"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dip_20"
            android:text="批量设置"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dip_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dip_30"
            android:layout_marginEnd="@dimen/dip_30"
            android:background="@color/color_CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_price_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginStart="@dimen/dip_30"
            android:gravity="center"
            android:text="价格"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dip_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view1" />

        <EditText
            android:id="@+id/et_price"
            android:layout_width="@dimen/dip_0"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginEnd="@dimen/dip_30"
            android:gravity="end"
            android:hint="请输入价格"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/dip_12"
            app:layout_constraintBottom_toBottomOf="@+id/tv_price_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_price_title"
            app:layout_constraintTop_toTopOf="@+id/tv_price_title" />

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dip_30"
            android:layout_marginEnd="@dimen/dip_30"
            android:background="@color/color_CCCCCC"
            app:layout_constraintTop_toBottomOf="@+id/tv_price_title" />

        <TextView
            android:id="@+id/tv_quantity_title"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_marginStart="@dimen/dip_30"
            android:text="库存"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dip_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2" />

        <EditText
            android:id="@+id/et_quantity"
            android:layout_width="@dimen/dip_0"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dip_30"
            android:background="@null"
            android:gravity="end"
            android:hint="请输入库存"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/dip_12"
            app:layout_constraintBottom_toBottomOf="@+id/tv_quantity_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_quantity_title"
            app:layout_constraintTop_toTopOf="@+id/tv_quantity_title" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_quantity_title"
            android:layout_height="38dp"
            android:gravity="center"
            android:text="取消"
            android:layout_marginTop="@dimen/dip_8"
            android:background="@color/color_CCCCCC"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dip_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_confirm"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="0dp"
            android:layout_marginTop="@dimen/dip_8"
            android:layout_height="38dp"
            android:background="@color/color_0EB170"
            android:gravity="center"
            android:text="确定"
            app:layout_constraintTop_toBottomOf="@+id/tv_quantity_title"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/dip_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_cancel" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>