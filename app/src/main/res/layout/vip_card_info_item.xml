<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/color_FFFFFF">

    <RelativeLayout
        android:id="@+id/llOne"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/llTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vipCardName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:singleLine="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="金卡"
            android:textColor="@color/color_333333"
            android:textSize="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llTwo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/llThree"
        app:layout_constraintStart_toEndOf="@+id/llOne"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vipCardDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="7.5"
            android:textColor="@color/color_333333"
            android:textSize="12dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llThree"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/llFour"
        app:layout_constraintStart_toEndOf="@+id/llTwo"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vipCardUserCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="金卡"
            android:textColor="@color/color_333333"
            android:textSize="12dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/llFour"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/llThree"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editCard"
            android:layout_width="@dimen/dip_50"
            android:layout_height="@dimen/dip_20"
            android:layout_marginVertical="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="编辑"
            android:textColor="@color/color_0EB170"
            android:textSize="12dp" />
        <TextView
            android:id="@+id/delCard"
            android:layout_width="@dimen/dip_50"
            android:layout_height="@dimen/dip_20"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"
            android:text="删除"
            android:textColor="@color/color_0EB170"
            android:textSize="12dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>