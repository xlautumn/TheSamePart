<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/color_FFFFFF"
        android:paddingStart="@dimen/dip_12"
        android:paddingTop="@dimen/dip_6"
        android:paddingEnd="@dimen/dip_12"
        android:paddingBottom="@dimen/dip_6"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_spec_check"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_product_spec"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_spec_value_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dip_8"
            android:text="规格值"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/dip_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_spec_check"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/tv_spec_value"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_marginStart="75dp"
            android:layout_weight="1"
            android:background="@drawable/shape_gray_rect_border_input"
            android:paddingStart="@dimen/dip_19"
            android:paddingEnd="@dimen/dip_19"
            android:singleLine="true"
            android:hint="请填写规格值，如：水蜜桃"
            android:textColorHint="@color/color_999999"
            android:textSize="@dimen/dip_11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>