<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_choose_spec_dialog_top_bg"
        android:paddingTop="@dimen/dip_3"
        android:paddingBottom="@dimen/dip_3"
        android:paddingLeft="@dimen/dip_15"
        android:paddingRight="@dimen/dip_15">

        <TextView
            android:id="@+id/dialog_good_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dip_7"
            android:paddingBottom="@dimen/dip_7"
            android:text="dialog Text"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/dialog_close"
            android:layout_width="@dimen/dip_25"
            android:layout_height="@dimen/dip_25"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_dialog_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/product_attribute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/dip_20"
        android:paddingTop="@dimen/dip_5"
        android:paddingRight="@dimen/dip_20"
        android:paddingBottom="@dimen/dip_5"
        android:visibility="gone"
        android:text=""
        android:textColor="@android:color/darker_gray"
        android:textSize="16dp" />

    <ListView
        android:id="@+id/product_attribute_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_choose_spec_dialog_bottom_bg"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dip_15">

        <TextView
            android:id="@+id/selectedSpecs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dip_5"
            android:paddingBottom="@dimen/dip_5"
            android:text="已选规格:"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/dip_12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip_40">

            <TextView
                android:id="@+id/selectedPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="￥"
                android:textColor="@color/color_E76612"
                android:textSize="@dimen/dip_12" />

            <TextView
                android:id="@+id/addCart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_choose_spec_dialog_cart_bottom_bg"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dip_10"
                android:paddingRight="@dimen/dip_10"
                android:text="加入购物车"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/dip_16" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>