<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F8F8F8">

    <include
        android:id="@+id/toolbar_title"
        layout="@layout/toolbar_title" />


    <TextView
        android:id="@+id/accountPassword"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_15"
        android:background="@drawable/shape_rect_white_solid"
        android:drawableRight="@drawable/arrow_next_page"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp"
        android:text="账号密码"
        android:textColor="@color/color_333333"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_title" />


    <LinearLayout
        android:id="@+id/versionDetect"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginTop="@dimen/dip_10"
        android:layout_marginRight="@dimen/dip_15"
        android:background="@drawable/shape_rect_white_solid"
        android:orientation="horizontal"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountPassword">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="版本检测"
            android:textColor="@color/color_333333"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/currentVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/arrow_next_page"
            android:drawablePadding="5dp"
            android:text="V1.0.0"
            android:textColor="@color/color_999999"
            android:textSize="11dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/accountQuit"
        android:layout_width="223dp"
        android:layout_height="38dp"
        android:layout_marginTop="42dp"
        android:background="@drawable/shape_half_circle_primary_color_rect"
        android:gravity="center"
        android:text="退出"
        android:textColor="@color/color_FFFFFF"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/versionDetect" />

</androidx.constraintlayout.widget.ConstraintLayout>
