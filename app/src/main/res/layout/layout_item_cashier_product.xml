<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product_img"
        android:layout_width="@dimen/dip_66"
        android:layout_height="@dimen/dip_66"
        android:layout_marginStart="@dimen/dip_11"
        android:layout_marginTop="@dimen/dip_15"
        android:layout_marginBottom="@dimen/dip_20"
        android:scaleType="fitXY"
        android:src="@drawable/icn_head_img"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dip_14"
        android:layout_marginTop="@dimen/dip_20"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="1"
        android:textColor="@color/color_999999"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_price"
        app:layout_constraintStart_toEndOf="@+id/iv_product_img"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="商品名称" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dip_14"
        android:layout_marginTop="@dimen/dip_5"
        android:text=""
        android:textColor="@color/color_E15C00"
        android:textSize="@dimen/dip_16"
        app:layout_constraintStart_toEndOf="@+id/iv_product_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_name"
        tools:text="价格" />

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dip_14"
        android:layout_marginBottom="@dimen/dip_14"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/color_999999"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_product_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_price"
        tools:text="库存" />

    <ImageView
        android:id="@+id/iv_to_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_operation"
        android:layout_marginEnd="@dimen/dip_17"
        android:src="@drawable/arrow_next_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="@dimen/dip_40"
        android:gravity="right"
        tools:text="上架"
        android:textSize="@dimen/dip_11"
        android:textColor="@color/color_E15C00"
        android:layout_height="@dimen/dip_20"
        android:layout_marginEnd="@dimen/dip_17"
        app:layout_constraintBaseline_toBaselineOf="@+id/tv_quantity"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/bottomDivider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_05"
        android:layout_marginLeft="@dimen/dip_15"
        android:layout_marginRight="@dimen/dip_15"
        android:background="@color/color_E5E5E5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>