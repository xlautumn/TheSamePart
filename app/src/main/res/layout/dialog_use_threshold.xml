<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dip_20"
    android:orientation="vertical"
    android:background="@color/color_FEFEFE">

    <LinearLayout
        android:id="@+id/llNoThreshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingEnd="@dimen/dip_30"
        android:paddingStart="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="无使用门槛"
            android:textColor="#ff333333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/ivNoThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dot"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_D2D2D2" />

    <LinearLayout
        android:id="@+id/llHasThreshold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="13dp"
        android:paddingEnd="@dimen/dip_30"
        android:paddingStart="40dp"
        android:paddingBottom="13dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满"
                android:textColor="#ff333333"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etThresholdNum"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="5dp"
                android:layout_width="56dp"
                android:layout_height="23dp"
                android:background="@drawable/shape_gray_rect_border_input"
                android:lines="1"
                android:gravity="center"
                android:textColor="@color/color_0EB170"
                android:textSize="@dimen/dip_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元使用"
                android:textColor="#ff333333"
                android:textSize="12sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/ivHasThreshold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dot"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="226dp"
        android:layout_height="38dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape_half_circle_primary_color_rect"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:text="确定"
        android:textColor="@color/color_FFFFFF"
        android:textSize="13dp" />

</LinearLayout>